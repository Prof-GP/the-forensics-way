---
// src/pages/index.astro
import MainLayout from '../layouts/MainLayout.astro';
import BlogPostCard from '../components/BlogPostCard.astro';
import { getCollection } from 'astro:content';

// Get recent blog posts
const posts = await getCollection('blog');
const recentPosts = posts
  .sort((a, b) => b.data.pubDate.valueOf() - a.data.pubDate.valueOf())
  .slice(0, 3);
---

<MainLayout title="The Forensics Way" description="A modern blog built with Astro">
  <section class="hero">
    <a href="/blog" class="btn">Read the Blog</a>
  </section>

  <section class="recent-posts">
    <div class="container">
      <h2>Recent Posts</h2>
      
      <div class="post-grid">
        {recentPosts.map(post => (
          <BlogPostCard post={post} />
        ))}
      </div>
      
      <div class="view-all">
        <a href="/blog" class="view-all-link">View all posts â†’</a>
      </div>
    </div>
  </section>
</MainLayout>

<style>
  .hero {
    position: relative;
    min-height: 500px;
    background-image: url('/images/The%20Forensic%20Way.png');
    background-size: cover;
    background-position: center;
    background-repeat: no-repeat;
  }
  
  .btn {
    position: absolute;
    bottom: 2rem;
    right: 2rem;
    display: inline-block;
    background-color: #0077cc;
    color: white;
    padding: 0.75rem 1.5rem;
    border-radius: 4px;
    text-decoration: none;
    font-weight: 600;
    transition: background-color 0.2s;
    box-shadow: 0 2px 8px rgba(0, 0, 0, 0.3);
  }
  
  .btn:hover {
    background-color: #005fa3;
  }
  
  .container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1rem;
  }
  
  .recent-posts {
    padding: 4rem 1rem;
  }
  
  .recent-posts h2 {
    font-size: 2rem;
    margin-bottom: 2rem;
    text-align: center;
  }
  
  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(300px, 1fr));
    gap: 2rem;
  }
  
  .view-all {
    margin-top: 3rem;
    text-align: center;
  }
  
  .view-all-link {
    color: #0077cc;
    text-decoration: none;
    font-size: 1.1rem;
    font-weight: 500;
    transition: color 0.2s;
  }
  
  .view-all-link:hover {
    color: #005fa3;
  }
  
  @media (max-width: 768px) {
    .hero {
      min-height: 400px;
    }

    .hero h1 {
      font-size: 2rem;
    }
    
    .post-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
