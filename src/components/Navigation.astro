---
// src/components/Navigation.astro
const BASE_URL = import.meta.env.BASE_URL;
---

<nav>
  <ul class="nav-links">
    <li><a href={`${BASE_URL}`}>Home</a></li>
    <li><a href={`${BASE_URL}blog/`}>Blog</a></li>
    <li><a href={`${BASE_URL}about/`}>About</a></li>
    <li><a href={`${BASE_URL}submit-malware/`}>Submit</li>
    <li><a href={`${BASE_URL}tracking/`}></a></li>
  </ul>
</nav>

<style>
  .nav-links {
    display: flex;
    gap: 0.7rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }

  .nav-links a {
    color: #333;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
    white-space: nowrap;
  }

  .nav-links a:hover {
    color: #667eea;
  }

  :root.dark .nav-links a {
    color: #ccc;
  }

  :root.dark .nav-links a:hover {
    color: #fff;
  }

  :root.dark li a {
    color: var(--nav-link-color-dark, #ccc);
  }

  :root.dark li a:hover {
    color: var(--nav-link-hover-dark, #fff);
  }

  :root.dark li.active a {
    color: var(--nav-link-active-dark, #fff);
  }

  @media (max-width: 768px) {
    .nav-links {
      flex-direction: column;
      gap: 1rem;
      width: 100%;
      text-align: center;
    }

    .nav-links a {
      display: block;
      padding: 0.75rem;
      border-radius: 4px;
      background: #f5f5f5;
    }

    :root.dark .nav-links a {
      background: #2a2a2a;
    }
  }
</style>
