// src/components/Navigation.astro
---

<nav>
  <ul class="nav-links">
    <li><a href="/${import.meta.env.BASE_URL}">Home</a></li>
    <li><a href="/${import.meta.env.BASE_URL}/blog">Blog</a></li>
    <li><a href="/${import.meta.env.BASE_URL}/about">About</a></li>
  </ul>
</nav>

<style>
  .nav-links {
    display: flex;
    gap: 1.5rem;
    list-style: none;
    padding: 0;
    margin: 0;
  }
  
  .nav-links a {
    color: #333;
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }
  
  .nav-links a:hover {
    color: #0077cc;
  }
  
  :root.dark li a {
    color: var(--nav-link-color-dark, #ccc);
  }
  
  :root.dark li a:hover {
    color: var(--nav-link-hover-dark, #fff);
  }
  
  :root.dark li.active a {
    color: var(--nav-link-active-dark, #fff);
  }
  
  @media (max-width: 768px) {
    .nav-links {
      gap: 1rem;
    }
  }
</style>
