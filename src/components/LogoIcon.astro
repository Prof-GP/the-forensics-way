---
// /src/components/LogoIcon.astro

// Define component props using Astro.props
const { iconName, imageSrc, size, width, height, color = 'currentColor', className } = Astro.props;

// Determine the effective width and height
// Use explicit width/height if provided, otherwise fall back to size, default to 24 if none
const effectiveWidth = width ?? size ?? 24;
const effectiveHeight = height ?? size ?? 24;

// Define a mapping of icon names to their SVG path data or full SVG markup.
// For simplicity, we'll include a few examples here.
// In a real application, you might import these from a separate file or use a tool
// to manage a larger icon set.
const icons = {
  star: `
    <svg xmlns="http://www.w3.org/2000/svg" width="${effectiveWidth}" height="${effectiveHeight}" viewBox="0 0 24 24" fill="none" stroke="${color}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="${className}">
      <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2"></polygon>
    </svg>
  `,
  sun: `
    <svg xmlns="http://www.w3.org/2000/svg" width="${effectiveWidth}" height="${effectiveHeight}" viewBox="0 0 24 24" fill="none" stroke="${color}" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="${className}">
      <circle cx="12" cy="12" r="5"></circle>
      <line x1="12" y1="1" x2="12" y2="3"></line>
      <line x1="12" y1="21" x2="12" y2="23"></line>
      <line x1="4.22" y1="4.22" x2="5.64" y2="5.64"></line>
      <line x1="18.36" y1="18.36" x2="19.78" y2="19.78"></line>
      <line x1="1" y1="12" x2="3" y2="12"></line>
      <line x1="21" y1="12" x2="23" y2="12"></line>
      <line x1="4.22" y1="19.78" x2="5.64" y2="18.36"></line>
      <line x1="18.36" y1="5.64" x2="19.78" y2="4.22"></line>
    </svg>
  `,
  spaceman: `
    <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 100 100">
        <circle cx="50" cy="40" r="35" fill="#e0e0e0" stroke="#a0a0a0" stroke-width="3"/>
        <ellipse cx="50" cy="45" rx="25" ry="18" fill="#4a90e2" stroke="#357bd8" stroke-width="2"/>
        <rect x="30" y="65" width="40" height="30" rx="10" ry="10" fill="#c0c0c0" stroke="#a0a0a0" stroke-width="3"/>
        <rect x="15" y="65" width="15" height="25" rx="5" ry="5" fill="#c0c0c0" stroke="#a0a0a0" stroke-width="3"/>
        <rect x="70" y="65" width="15" height="25" rx="5" ry="5" fill="#c0c0c0" stroke="#a0a0a0" stroke-width="3"/>
        <rect x="35" y="95" width="15" height="20" rx="5" ry="5" fill="#c0c0c0" stroke="#a0a0a0" stroke-width="3"/>
        <rect x="50" y="95" width="15" height="20" rx="5" ry="5" fill="#c0c0c0" stroke="#a0a0a0" stroke-width="3"/>
        <line x1="50" y1="5" x2="50" y2="15" stroke="#a0a0a0" stroke-width="3" stroke-linecap="round"/>
        <circle cx="50" cy="5" r="3" fill="#a0a0a0"/>
    </svg>
  `,
  // Add more icons here following the same pattern
  // example:
  // home: `... svg markup for home icon ...`
};

// Get the SVG markup for the requested icon name
const svgMarkup = icons[iconName];
---

{imageSrc ? (
  <img src={imageSrc} width={effectiveWidth} height={effectiveHeight} alt={`Logo icon: ${iconName || 'image'}`} class={className} />
) : svgMarkup ? (
  <Fragment set:html={svgMarkup} />
) : (
  <svg xmlns="http://www.w3.org/2000/svg" width="{effectiveWidth}" height="{effectiveheight}" viewBox="0 0 24 24" fill="none" stroke="red" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="{className}">
    <circle cx="12" cy="12" r="10"></circle>
    <line x1="15" y1="9" x2="9" y2="15"></line>
    <line x1="9" y1="9" x2="15" y2="15"></line>
  </svg>
)}

<style>
  /* You can add default styles for your icons here if needed */
  /* For example: */
  /* img, svg {
    display: inline-block;
    vertical-align: middle;
  } */
</style>

