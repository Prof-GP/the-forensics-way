---
// src/components/BlogPostCard.astro
import { formatDate } from '../utils/dates';

const { post } = Astro.props;
---

<div class="blog-card">
  {post.data.image && (
    <a href={post.url} class="card-image-link">
      <img src={post.data.image} alt={post.data.title} class="card-image" />
    </a>
  )}
  
  <div class="card-content">
    <div class="card-meta">
      <span class="card-date">{formatDate(post.data.pubDate)}</span>
    </div>
    
    <h2 class="card-title">
      <a href={post.url}>{post.data.title}</a>
    </h2>
    
    <p class="card-excerpt">
      {post.data.description}
    </p>
    
    <div class="card-footer">
      <a href={post.url} class="read-more">
        Read more â†’
      </a>
      
      {post.data.tags && post.data.tags.length > 0 && (
        <div class="card-tags">
          {post.data.tags.slice(0, 2).map((tag) => (
            <a href={`/tags/${tag}`} class="tag">{tag}</a>
          ))}
        </div>
      )}
    </div>
  </div>
</div>

<style>
  .blog-card {
    border-radius: 8px;
    overflow: hidden;
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
    transition: transform 0.3s, box-shadow 0.3s;
    background-color: #fff;
  }
  
  .blog-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.15);
  }
  
  .card-image-link {
    display: block;
    width: 100%;
    height: 200px;
    overflow: hidden;
  }
  
  .card-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s;
  }
  
  .blog-card:hover .card-image {
    transform: scale(1.05);
  }
  
  .card-content {
    padding: 1.5rem;
  }
  
  .card-meta {
    margin-bottom: 0.5rem;
  }
  
  .card-date {
    font-size: 0.9rem;
    color: #666;
  }
  
  .card-title {
    margin: 0 0 0.75rem 0;
    font-size: 1.4rem;
  }
  
  .card-title a {
    color: #333;
    text-decoration: none;
  }
  
  .card-title a:hover {
    color: #0077cc;
  }
  
  .card-excerpt {
    color: #555;
    margin-bottom: 1rem;
    line-height: 1.6;
  }
  
  .card-footer {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }
  
  .read-more {
    color: #0077cc;
    text-decoration: none;
    font-weight: 500;
  }
  
  .card-tags {
    display: flex;
    gap: 0.5rem;
  }
  
  .tag {
    background-color: #f0f0f0;
    padding: 0.2rem 0.6rem;
    border-radius: 20px;
    font-size: 0.8rem;
    text-decoration: none;
    color: #333;
  }
</style>
