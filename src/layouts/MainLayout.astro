---
// src/layouts/MainLayout.astro
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import '../styles/global.css';

const { title, description } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />
    <script is:inline>
      // Immediately set theme to avoid flash of unstyled content
      (function() {
        function getThemePreference() {
          if (typeof localStorage !== 'undefined' && localStorage.getItem('theme')) {
            return localStorage.getItem('theme');
          }
          return window.matchMedia('(prefers-color-scheme: dark)').matches ? 'dark' : 'light';
        }
        
        const theme = getThemePreference();
        document.documentElement.classList.toggle('dark', theme === 'dark');
      })();
    </script>
  </head>
  <body>
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
  <style is:global>
      :root {
        /* Light theme variables */
        --background-color: #ffffff;
        --text-color: #333333;
        --accent-color: #3498db;
        --theme-toggle-hover: rgba(0, 0, 0, 0.1);
        
        /* Header specific variables - light mode */
        --header-bg: #ffffff;
        --logo-color: #333333;
        --nav-link-color: #555555;
        --nav-link-hover: #000000;
        --nav-link-active: #000000;
      }
      
      :root.dark {
        /* Dark theme variables */
        --background-color: #121212;
        --text-color: #f5f5f5;
        --accent-color: #60a5fa;
        --theme-toggle-hover: rgba(255, 255, 255, 0.1);
        
        /* Header specific variables - dark mode */
        --header-bg-dark: #1a1a1a;
        --logo-color-dark: #f5f5f5;
        --nav-link-color-dark: #cccccc;
        --nav-link-hover-dark: #ffffff;
        --nav-link-active-dark: #ffffff;
      }
      
      * {
        box-sizing: border-box;
        margin: 0;
        padding: 0;
      }
      
      body {
        font-family: system-ui, -apple-system, BlinkMacSystemFont, 'Segoe UI', Roboto,
          Oxygen, Ubuntu, Cantarell, 'Open Sans', 'Helvetica Neue', sans-serif;
        background-color: var(--background-color);
        color: var(--text-color);
        transition: background-color 0.3s ease, color 0.3s ease;
        min-height: 100vh;
        display: flex;
        flex-direction: column;
      }
      
      main {
        flex: 1;
        max-width: 1200px;
        width: 100%;
        margin: 0 auto;
        padding: 2rem;
      }
      
      footer {
        text-align: center;
        padding: 2rem;
        background-color: var(--header-bg, #ffffff);
        color: var(--text-color);
        transition: background-color 0.3s ease, color 0.3s ease;
        margin-top: auto;
      }
      
      :root.dark footer {
        background-color: var(--header-bg-dark, #1a1a1a);
      }
      
      h1, h2, h3, h4, h5, h6 {
        margin-bottom: 1rem;
        line-height: 1.2;
      }
      
      p {
        margin-bottom: 1rem;
        line-height: 1.6;
      }
      
      a {
        color: var(--accent-color);
        text-decoration: none;
      }
      
      a:hover {
        text-decoration: underline;
      }
    </style>
  </body>
</html>